<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">
    
    <ImageView
        android:id="@+id/userPhotoIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_facebook"/>

    <TextView
        android:id="@+id/userFullNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_below="@id/userPhotoIv"
        android:text="Full Name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/userEmailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_below="@id/userFullNameTv"
        android:text="Email"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/userAgeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_below="@id/userEmailTv"
        android:text="Age"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_below="@id/userAgeTv"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>